VN="$TAG$CID"
if test -n "$CID"
then
	# format version string, strip trailing zero of sublevel:
	VN=$(echo "$VN" | sed -e 's/-/./g;s/\([0-9]*[.][0-9]*\)[.]0/\1/')
fi

VN=$(expr "$VN" : v*'\(.*\)')

if test -r $GVF
then
	VC=$(sed -e 's/^#define PERF_VERSION "\(.*\)"/\1/' <$GVF)
else
	VC=unset
fi
test "$VN" = "$VC" || {
	echo >&2 "  PERF_VERSION = $VN"
	echo "#define PERF_VERSION \"$VN\"" >$GVF
}


