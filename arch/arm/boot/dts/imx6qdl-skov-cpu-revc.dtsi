			MX6QDL_PAD_EIM_D20__GPIO3_IO20		0x40000058
		>;
	};

	pinctrl_touch: touchgrp {
		fsl,pins = <
			/* external pull up */
			MX6QDL_PAD_EIM_D19__GPIO3_IO19			0x10040
		>;
	};
